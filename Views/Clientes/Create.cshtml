@model AlquilerDeLibros.Models.Cliente

@{
    ViewBag.Title = "Cliente";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark" style="text-align:center">@ViewBag.Title</h1>
                <hr />
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->


<div class="container-fluid">

    <div class="row">
        <!--PRIMERA COLUMNA-->
        <div class="col-lg-2 col-6">
            <div class="card card-info"></div>
        </div>
        <!--/PRIMERA COLUMNA-->
        <!--SEGUNDA COLUMNA-->
        <div class="col-lg-8 col-6">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Agregar Cliente</h3>
                </div>
                @using (Html.BeginForm(@*"Create", "Clientes", FormMethod.Post, new { enctype = "multipart/form-data" })*@))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <form class="form-horizontal">

                        <div class="card-body">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.CodigoDeCliente, new { @class = "col-sm-2 col-form-label" })
                                <div class="col-sm-5">
                                    @Html.EditorFor(model => model.CodigoDeCliente, new { HtmlAttributes = new { @class = "form-control", @maxlength = "14", @placeholder = "Ingrese la cédula sin guiones" } })
                                    @Html.ValidationMessageFor(model => model.CodigoDeCliente, "", new { @class = "text-danger" })
                                </div>
                                @Html.LabelFor(model => model.Foto, new { @class = "col-form-label offset-2" })<!--AQUI SOLO ESTAN LAS ETIQUETAS-->
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-8">
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.NombresDelCliente, new { @class = "col-sm-3 col-form-label" })
                                        <div class="col-sm-8">
                                            @Html.EditorFor(model => model.NombresDelCliente, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.NombresDelCliente, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.ApellidosDelCliente, new { @class = "col-sm-3 col-form-label" })
                                        <div class="col-sm-8">
                                            @Html.EditorFor(model => model.ApellidosDelCliente, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ApellidosDelCliente, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.Email, new { @class = "col-sm-3 col-form-label" })
                                        <div class="col-sm-8">
                                            @Html.EditorFor(model => model.Email, new { HtmlAttributes = new { @class = "form-control", @type = "email", @disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <!--ETIQUETA DE IMAGEN-->
                                <div class="col-sm-4">
                                    <img src="~/Content/perfil.png" width="90%" height="75%" />
                                </div>

                            </div>
                        </div>

                        <!--FOOTER-->
                        <div class="card-footer float-right">
                            <input type="submit" class="btn btn-info" value="Guardar" />
                        </div>
                        <div class="card-footer float-left">
                            <a class="btn btn-info" href="@Url.Action("Index","Clientes")">Regresar</a>
                        </div>
                        <!--/FOOTER-->
                    </form>
                }
            </div>
        </div>


        <!--TERCERA COLUMNA-->
        <div class="col-lg-2 col-6">
            <div class="card card-info"></div>
        </div>
        <!--/TERCERA COLUMNA-->
    </div>
</div>





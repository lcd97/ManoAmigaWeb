@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">

        <div class="row">
            <div class="col-md-6">
                @Html.Label("Codigo de Alquiler", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-6">
                @Html.Label("Fecha de Alquiler", htmlAttributes: new { @class = "control-label" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                @Html.Editor("Cod", new { htmlAttributes = new { @class = "form-control", @id = "codigo" } })
            </div>
            <div class="col-md-6">
                @Html.TextBox("Fecha1", null, new { @class = "calendario form-control", @id = "fecha1" })
            </div>
        </div>
    </div>

    <div class="form-group">
        
        <div class="row">
            <div class="col-md-6">
                @Html.Label("Fecha devolucion", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-6">
                @Html.Label("Fecha devuelta", htmlAttributes: new { @class = "control-label" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                @Html.Editor("fecha2", new { htmlAttributes = new { @class = "form-control", @id = "fecha2" } })
            </div>
            <div class="col-md-6">
                @Html.Editor("Fecha3", new { htmlAttributes = new { @class = "form-control", @id = "date3", @type="date" } })
            </div>
        </div>
    </div>

    <div class="form-group">
            @Html.Label("Cliente", htmlAttributes: new { @class = "control-label col-md-4 offset-4" })
        <div class="col-md-4 offset-4">
                @Html.Editor("Cliente", new { htmlAttributes = new { @class = "form-control", @id = "cliente", @style = "text-align:center" } })            
        </div>
    </div>
</div>


    //TABLA PARA MOSTRAR LOS LIBROS PRESTADOS DEL ALQUILER
    <table class="table table-bordered" id="table">
        <thead>
            <tr>
                <th style="width:70%">
                    @Html.DisplayName("Título de Libro")
                </th>
                <th style="width:30%">
                    @Html.DisplayName("Número de Copia")
                </th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
}
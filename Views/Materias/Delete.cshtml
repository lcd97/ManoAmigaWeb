@model AlquilerDeLibros.Models.Materia

@{
    ViewBag.Title = "Materia";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark" style="text-align:center">@ViewBag.Title</h1>
                <hr />
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->



<div class="container-fluid">

    <div class="row">
        <!--PRIMERA COLUMNA-->
        <div class="col-lg-4 col-6">
            <div class="card card-info"></div>
        </div>
        <!--/PRIMERA COLUMNA-->
        <!--SEGUNDA COLUMNA-->
        <div class="col-lg-4 col-6">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title" style="text-align: center">¿Esta seguro que desea eliminar esta materia?</h3>
                </div>
                <div class="form-horizontal">

                    <h4></h4>

                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-sm-12" style="text-align:center">
                            @Html.LabelFor(model => model.CodigoDeMateria,new { @class = "col-form-label" })
                            </div>
                            <div class="col-sm-12" style="text-align:center">
                                @Html.DisplayFor(m => m.CodigoDeMateria,new { HtmlAttributes = new { @class = "form-control",@disabled = "disabled" } })
                            </div>
                        </div>

                        <!--CONTRASEÑA-->
                        <div class="form-group row">
                            <div class="col-sm-12" style="text-align:center">
                                @Html.LabelFor(model => model.DescripcionDeMateria,new { @class = "col-form-label" })
                            </div>
                            <div class="col-sm-12" style="text-align:center">
                                @Html.DisplayFor(model => model.DescripcionDeMateria,new { htmlAttributes = new { @class = "form-control",@disabled = "disabled" } })
                            </div>
                        </div>

                    </div>

                    @using (Html.BeginForm("Delete","Materias",FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        <!--FOOTER-->
                        <div class="card-footer float-left">
                            <a class="btn btn-info" href="@Url.Action("Index","Materias")">Regresar</a>
                        </div>
                        <div class="card-footer float-right">
                            <input type="submit" value="Eliminar" class="btn btn-success" />
                        </div>
                        <!--/FOOTER-->

                        <h4>@ViewBag.Error</h4>
                    }
                </div>
            </div>
        </div>


        <!--TERCERA COLUMNA-->
        <div class="col-lg-4 col-6">
            <div class="card card-info"></div>
        </div>
        <!--/TERCERA COLUMNA-->
    </div>
</div>
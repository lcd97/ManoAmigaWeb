@model AlquilerDeLibros.Models.IndexViewModel
@{
    ViewBag.Title = "Gestionar";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark" style="text-align:center">@ViewBag.Title</h1>
                <hr />
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->


<div class="container-fluid">

    <div class="row">
        <!--PRIMERA COLUMNA-->
        <div class="col-lg-4 col-6">
            <div class="card card-info"></div>
        </div>
        <!--/PRIMERA COLUMNA-->
        <!--SEGUNDA COLUMNA-->
        <div class="col-lg-3 col-6">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Configuración de la cuenta</h3>
                </div>
                <form class="form-horizontal">

                    <div class="card-body">
                        <div class="form-group row">
                            @Html.Label("Correo Electrónico", new { @class = "col-form-label" })
                            <div class="col-sm-10">
                                @Html.Partial("_LoginPartial")
                            </div>
                        </div>

                        <!--CONTRASEÑA-->
                        <div class="form-group row">
                            @Html.Label("Rol", new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">

                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.Label("Contraseña", new { @class = "col-form-label" })
                            <div class="col-sm-12">
                                [
                                @if (Model.HasPassword)
                                {
                                    @Html.ActionLink("Cambiar la contraseña", "ChangePassword")
                                }
                                else
                                {
                                    @Html.ActionLink("Crear", "SetPassword")
                                }
                                ]
                            </div>
                        </div>

                    </div>
                    <!--FOOTER
                    <div class="card-footer float-left">
                        <a class="btn btn-info" href="@Url.Action("Index","Materias")">Regresar</a>
                    </div>
                    <!--/FOOTER-->



                </form>
            </div>
        </div>


        <!--TERCERA COLUMNA-->
        <div class="col-lg-4 col-6">
            <div class="card card-info"></div>
        </div>
        <!--/TERCERA COLUMNA-->
    </div>
</div>
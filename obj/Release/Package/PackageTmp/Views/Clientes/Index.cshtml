@model IEnumerable<AlquilerDeLibros.Models.Cliente>

@{
    ViewBag.Title = "Lista de Clientes";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark" style="text-align:center">@ViewBag.Title</h1>
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->

<p>
    <a class="btn btn-success" href="@Url.Action("Create")" role="button">Añadir Nuevo</a>
</p>

@Styles.Render("~/Content/datatablecss")

<div class="table-responsive">
    <table class="table table-condensed table-bordered table-hover table-striped display dataTable_width_auto" id="tablaCliente">
        <thead style="background-color:#337ab7; color:white;">
            <tr>
                <th>

                    @Html.DisplayNameFor(model => model.CodigoDeCliente)
                </th>
                <th>

                    @Html.DisplayNameFor(model => model.NombresDelCliente)
                </th>
                <th>

                    @Html.DisplayNameFor(model => model.ApellidosDelCliente)
                </th>
                <th>

                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoDeCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombresDelCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApellidosDelCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>

                        <a class="btn btn-outline-primary" href="@Url.Action("Edit",new {id=item.Id })" role="button"><i class="fas fa-pencil-alt"></i></a>
                        <a class="btn btn-outline-info" href="@Url.Action("Details",new {id=item.Id })" role="button"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-outline-danger" href="@Url.Action("Delete",new {id=item.Id })" role="button"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!--modal-->
<div class="modal fade" id="bModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="etiqueta">Búsqueda de Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="VistaParcial">
                    
                </div>
            </div>
            @*<div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnAceptarBus" disabled="disabled" onclick="AceptarBusClick();">Aceptar</button>
            </div>*@
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/datatablejs")

    <script>
        //carga el DataTable Clientes

        var dataTable = null;
        $(function () {

            dataTable = $("#tablaCliente").DataTable({
                "sDom": '<<"row view-filter"<"col-sm-12"<"pull-left"f><"pull-right"l>>>t<"row view-pager "<"col-sm-12"<"pull-left"i><"pull-right "p>>>>',
                "iDisplayLength": 5,
                "order": [],
                "language": {

                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",

                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                },
            });
        });

    </script>
}

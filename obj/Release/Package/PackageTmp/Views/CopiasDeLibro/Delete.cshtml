@model AlquilerDeLibros.Models.CopiaDeLibro
@{
    ViewBag.Title = "Copia de Libro";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark" style="text-align:center">@ViewBag.Title</h1>
                <hr />
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->



<div class="container-fluid">

    <div class="row">
        <!--PRIMERA COLUMNA-->
        <div class="col-lg-4 col-6">
            <div class="card card-info"></div>
        </div>
        <!--/PRIMERA COLUMNA-->
        <!--SEGUNDA COLUMNA-->
        <div class="col-lg-4 col-6">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title" style="text-align: center">¿Esta seguro que desea eliminar esta copia?</h3>
                </div>
                <form class="form-horizontal">

                    <h4></h4>

                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-sm-12" style="text-align:center">
                                @Html.LabelFor(model => model.NumeroCopia,new { @class = "col-form-label" })
                            </div>
                            <div class="col-sm-12" style="text-align:center">
                                @Html.DisplayFor(m => m.NumeroCopia,new { HtmlAttributes = new { @class = "form-control",@disabled = "disabled" } })
                            </div>
                        </div>

                        <!--CONTRASEÑA-->
                        <div class="form-group row">
                            <div class="col-sm-12" style="text-align:center">
                                @Html.LabelFor(model => model.Libro.TituloDeLibro,new { @class = "col-form-label" })
                            </div>
                            <div class="col-sm-12" style="text-align:center">
                                @Html.DisplayFor(model => model.Libro.TituloDeLibro,new { htmlAttributes = new { @class = "form-control",@disabled = "disabled" } })
                            </div>
                        </div>

                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <!--FOOTER-->
                        <div class="card-footer float-left">
                            <a class="btn btn-info" href="@Url.Action("Index","CopiasDeLibro")">Regresar</a>
                        </div>
                        <div class="card-footer float-right">
                            <input type="submit" value="Eliminar" class="btn btn-success" />
                        </div>
                        <!--/FOOTER-->

                        <h4>@ViewBag.Error</h4>
                    }
                </form>
            </div>
        </div>


        <!--TERCERA COLUMNA-->
        <div class="col-lg-4 col-6">
            <div class="card card-info"></div>
        </div>
        <!--/TERCERA COLUMNA-->
    </div>
</div>



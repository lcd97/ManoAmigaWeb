@model IEnumerable<AlquilerDeLibros.Models.Materia>

@{
    ViewBag.Title = "Lista de Materias";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark" style="text-align:center">@ViewBag.Title</h1>
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->

<p>
    <a class="btn btn-success" href="@Url.Action("Create")" role="button">Añadir Nuevo</a>
</p>

@Styles.Render("~/Content/datatablecss")

<div class="table-responsive">
    <table class="table table-condensed table-bordered table-hover table-striped display dataTable_width_auto" id="tablaMaterias">
        <thead style="background-color:#337ab7; color:white;">
            <tr>
                <th>

                    @Html.DisplayNameFor(model => model.CodigoDeMateria)
                </th>
                <th>

                    @Html.DisplayNameFor(model => model.DescripcionDeMateria)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoDeMateria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescripcionDeMateria)
                    </td>
                    <td>
                        @*<a class="btn btn-outline-primary" onclick="CargarParcial('@Url.Action("Edit", new { id = item.Id})')" role="button"><i class="fas fa-pencil-alt"></i></a>*@
                        <a class="btn btn-outline-primary" href="@Url.Action("Create",new {id=item.Id })" role="button"><i class="fas fa-user-edit"></i></a>
                        <a class="btn btn-outline-info" href="@Url.Action("Details",new {id=item.Id })" role="button"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-outline-danger" href="@Url.Action("Delete",new {id=item.Id })" role="button"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

